<script>
    function updateClock() {
        const now = new Date();
        const options = {
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            hour12: true,
            timeZone: 'CET',
            timeZoneName: 'short'
        };
        const timeString = now.toLocaleTimeString('en-US', options).replace(' GMT+2', ' CET');
        document.getElementById('timeDisplay').textContent = timeString;
    }

    // Mise à jour de l'horloge toutes les secondes
    setInterval(updateClock, 1000);

    // Initialisation de l'horloge immédiatement
    updateClock();
</script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
